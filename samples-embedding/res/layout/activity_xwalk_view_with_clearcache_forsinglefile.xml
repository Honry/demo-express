<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/baidu_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Load Baidu Page" />

        <Button
            android:id="@+id/clear_baidu_btn"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Clear Baidu Cache Single File" />

    </LinearLayout>

    <TextView
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:text="ClearCacheForSingleFile API is used to clear cache for single file. It is for web resources url. In this example cache total size will decrease when I use api to clear the web image cache." />

    <TextView
        android:id="@+id/text1"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:textColor="#00ff00"   />

    <org.xwalk.core.XWalkView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/xwalkview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </org.xwalk.core.XWalkView>

</LinearLayout>
